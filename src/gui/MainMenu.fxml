<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane id="mainMenuBorderPane" prefHeight="576.0" prefWidth="1024.0" stylesheets="@application.css" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.MainMenuController">
   <center>
      <VBox id="mainMenuVBox" alignment="CENTER" fillWidth="false" maxWidth="400.0" prefHeight="200.0" prefWidth="100.0" spacing="10.0" stylesheets="@application.css" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="newGameBtn" accessibleText="Start New Game" mnemonicParsing="false" styleClass="mainMenuButton" stylesheets="@application.css" text="New Game" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font size="18.0" />
               </font></Button>
            <Button fx:id="loadGameBtn" accessibleText="Load a saved game" disable="true" mnemonicParsing="false" styleClass="mainMenuButton" stylesheets="@application.css" text="Load Game" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font size="18.0" />
               </font></Button>
         </children>
      </VBox>
   </center>
   <top>
      <Label id="mainMenuTitleLabel" stylesheets="@application.css" text="Roguelike" textAlignment="CENTER" textFill="WHITE" BorderPane.alignment="CENTER">
         <font>
            <Font size="48.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="50.0" />
         </BorderPane.margin>
         <effect>
            <DropShadow color="#0000d2" height="50.0" radius="24.5" spread="0.25" width="50.0" />
         </effect></Label>
   </top>
   <padding>
      <Insets bottom="100.0" left="100.0" right="100.0" top="50.0" />
   </padding>
</BorderPane>
